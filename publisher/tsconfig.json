{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",          // 或 "ESNext"
    "moduleResolution": "nodenext", // 或 "node16"
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*"],
}
